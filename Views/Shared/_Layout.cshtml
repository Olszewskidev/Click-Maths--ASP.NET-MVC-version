<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Click Maths</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/StyleSheet1.css" rel="stylesheet" />
    <link href="~/Scripts/snackbar.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Click Maths", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home", new { @class="buttonnav"})<span></span></li>
                    <li>@Html.ActionLink("Add New", "AddNew", "Home", new { @class = "buttonnav" })<span></span></li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { @class = "buttonnav" })</li>*@
                    <li><a href="@Url.Action("Index","Home")" class="buttonnav"><span></span>Home</a></li>        
                    <li><a href="@Url.Action("AddNew","Home")" class="buttonnav"><span></span>Top 10</a></li>
                    <li><a href="@Url.Action("AddNew","Home")" class="buttonnav"><span></span>Add New</a></li>
                    <li><a href="@Url.Action("Android","Home")" class="buttonnav"><span></span>Android</a></li>
                    <li><a href="@Url.Action("AddNew","Home")" class="buttonnav"><span></span>Contact</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="float:right">
            <p>&copy; @DateTime.Now.Year - Click Maths created by Kamil Olszewski</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/JSScript1.js"></script>
    <script src="~/Scripts/snackbar.min.js"></script>
</body>
</html>
